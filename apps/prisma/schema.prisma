generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  username      String?   @unique
  isPublic      Boolean   @default(true)
  onboardedAt   DateTime?

  allVisibility Visibility @default(PRIVATE)

  collections Collection[]
  bookmarks   Bookmark[]

  extensionTokens ExtensionToken[] 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]
  accounts Account[]
}

enum CollectionType {
  SYSTEM
  USER
}

enum Visibility {
  PRIVATE
  PUBLIC
}

model Collection {
  id   String         @id @default(cuid())
  name String
  type CollectionType @default(USER)

  visibility Visibility @default(PRIVATE)

  userId String

  parentId String?
  parent   Collection?  @relation("CollectionTree", fields: [parentId], references: [id])
  children Collection[] @relation("CollectionTree")

  bookmarks Bookmark[]

  order Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [id])
}

model Bookmark {
  id          String  @id @default(cuid())
  url         String
  title       String?
  description String?

  userId       String
  collectionId String?

  addDate     DateTime?
  lastVisited DateTime?

  faviconUrl String?
  domain     String
  isArchived Boolean @default(false)
  isStarred  Boolean @default(false)

  asset Asset?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User       User        @relation(fields: [userId], references: [id])
  Collection Collection? @relation(fields: [collectionId], references: [id])

  @@index([userId, domain])
}

model Asset {
  id         String @id @default(cuid())
  bookmarkId String @unique

  screenshotUrl String?
  iframeUrl     String?
  htmlSnapshot  String?
  ogImage       String?

  status      AssetStatus @default(PENDING)
  lastFetched DateTime?

  Bookmark Bookmark @relation(fields: [bookmarkId], references: [id])
}

enum AssetStatus {
  PENDING
  READY
  FAILED
}

model Session {
  id String @id @default(cuid())

  // tokens
  sessionToken String  @unique
  token        String?

  // expiry
  expires   DateTime
  expiresAt DateTime

  // metadata
  ipAddress String?
  userAgent String?

  // relation
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id String @id @default(cuid())

  // provider info
  provider          String
  providerId        String
  providerAccountId String
  accountId         String

  // credentials (email/password)
  password String? // ‚Üê REQUIRED FOR EMAIL AUTH

  // OAuth tokens
  accessToken          String?
  refreshToken         String?
  idToken              String?
  accessTokenExpiresAt DateTime?
  scope                String?

  // relation
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, accountId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExtensionToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String

  lastUsedCollectionId String?

  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)

  user User @relation(fields: [userId], references: [id])
}
